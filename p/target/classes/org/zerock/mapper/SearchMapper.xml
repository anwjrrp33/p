<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.SearchMapper">
	<select id="search" resultType="org.zerock.domain.BoardVO">
		select * from tbl_board
		<where>
			<foreach collection="map.entrySet()" index="key" item="keyword" open="(" close=")" separator="OR">
				<if test="key eq 't'.toString()">
					title like concat('%', #{keyword}, '%')
				</if>
				<if test="key eq 'c'.toString()">
					content like concat('%', #{keyword}, '%')
				</if>
				<if test="key eq 'w'.toString()">
					writer like concat('%', #{keyword}, '%')
				</if>
			</foreach>
		</where>
	</select>

</mapper>